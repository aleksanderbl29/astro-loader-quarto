{
  "name": "astro-loader-quarto",
  "version": "0.1.0",
  "description": "Astro Loader for Quarto content collections with full type safety and field mapping",
  "type": "module",
  "keywords": [
    "astro",
    "quarto",
    "content-collections",
    "loader",
    "astro-loader",
    "scientific-publishing",
    "academic"
  ],
  "author": "Aleksander",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/aleksander/astro-loader-quarto.git"
  },
  "homepage": "https://github.com/aleksander/astro-loader-quarto#readme",
  "bugs": {
    "url": "https://github.com/aleksander/astro-loader-quarto/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "astro": "^4.0.0"
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "astro": "^4.0.0",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

